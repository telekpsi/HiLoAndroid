<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comtelekpsi.github.hiloandroid.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="The HiLo Guessing Game"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:id="@+id/title"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:textStyle="normal|bold"
        android:textSize="26dp"/>

    <TextView
        android:text="Enter a number between 1 and 100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/instr"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="41dp"
        android:id="@+id/txtGuess"
        android:width="75dp"
        android:hint="guess"
        android:gravity="center_horizontal"
        android:layout_below="@+id/instr"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="GUESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guessBtn"
        android:layout_below="@+id/txtGuess"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="How many tries will it take you?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblOutput"
        android:textSize="17dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/ic_arrow_downward"
        android:id="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/instr"
        android:layout_marginEnd="48dp"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/ic_arrow_upward"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/instr"
        android:layout_marginStart="50dp"/>

</RelativeLayout>
